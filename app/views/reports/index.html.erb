<div class="container m-5 mx-auto">
  <div class="row">
    <div class="col-10">
      <div class="d-flex flex-row">
        <h3>レポート一覧</h3>
        <p class="d-flex align-items-end m-2">(全<%= @reports.count %>件)</p>
      </div>
      <div class="d-flex flex-wrap">
        <% @reports.each do |report| %>
          <%= link_to report_path(report.id) do %>
          <div class="m-2">
            <div class="mb-2">
              <% if report.image.attached? %>
                <%= image_tag report.image, size: "200x200" %>
              <% else %>
                <%= image_tag 'no_image', size: "200x200" %>
              <% end %>
            </div>
            <p class="text-dark"><strong><%= report.name %></strong></p>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
